name: Commit Shift Data

on:
  workflow_dispatch:
    inputs:
      file:
        description: "File to commit"
        required: true

jobs:
  commit-file:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: "16"

      - name: Commit Shift Data to GitHub
        env:
          GITHUB_TOKEN: ${{ secrets.TOKEN }}
        run: |
          echo "Committing file..."
          echo "${{ secrets.AUTH_PASSWORD }}" > password.txt
          # Replace "shift-data.json" with your file input
          echo ${{ github.event.inputs.file }} > shift-data.json
          git config user.name "GitHub Actions Bot"
          git config user.email "actions@github.com"
          git add shift-data.json
          git commit -m "Automated commit of shift data"
          git push origin main
